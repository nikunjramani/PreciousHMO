<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SplashScreen">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hmo"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/tvTitle"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        android:src="@drawable/total_dependent"
        app:layout_constraintBottom_toTopOf="@+id/ivMiddle"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/ivMiddle"
        app:layout_constraintEnd_toEndOf="@id/ivMiddle"
        android:id="@+id/ivTop"
       />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/total_bill"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toTopOf="@id/ivMiddle"
        app:layout_constraintBottom_toBottomOf="@id/ivMiddle"
        app:layout_constraintEnd_toStartOf="@id/ivMiddle"
        android:layout_marginEnd="20dp"
        android:id="@+id/ivLeft"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/total_complains"
android:id="@+id/ivRight"
        app:layout_constraintTop_toTopOf="@id/ivMiddle"
        app:layout_constraintStart_toEndOf="@id/ivMiddle"
        android:layout_marginStart="20dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        android:id="@+id/ivMiddle"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/total_appointment"
        app:layout_constraintTop_toBottomOf="@id/ivMiddle"
        app:layout_constraintStart_toStartOf="@id/ivMiddle"
        android:layout_marginTop="20dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        android:id="@+id/ivBottom"
        />



</androidx.constraintlayout.widget.ConstraintLayout>