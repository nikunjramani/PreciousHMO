<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvProviderNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/provider"
        />

    <TextView
        android:id="@+id/tvProviderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/tvProviderNameTitle"
        app:layout_constraintTop_toTopOf="@id/tvProviderNameTitle"
        />

    <TextView
        android:id="@+id/tvChangeProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryDark"
        android:drawableStart="@drawable/ic_select"
        android:padding="5dp"
        android:text="@string/select"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintTop_toTopOf="@id/tvProviderName" />

    <TextView
        android:id="@+id/tvLocationNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvProviderNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvProviderName"
        android:text="@string/location"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvProviderName"
        app:layout_constraintTop_toTopOf="@+id/tvLocationNameTitle"
        />


    <TextView
        android:id="@+id/tvAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvLocationNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationNameTitle"
        android:text="@string/address"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvLocationName"
        app:layout_constraintTop_toTopOf="@+id/tvAddressTitle"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"

        />


</androidx.constraintlayout.widget.ConstraintLayout>